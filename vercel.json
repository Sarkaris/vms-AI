{
  "version": 2,
  "builds": [
    {
      "src": "server/package.json",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["server/**", "client/build/**"]
      }
    },
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "client/build"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "server/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "client/build/$1"
    }
  ],
  "env": {
    "DEMO_MODE": "true",
    "DEMO_DATABASE": "sqlite",
    "JWT_SECRET": "your-demo-secret-key-change-in-production",
    "NODE_ENV": "production",
    "PORT": "5000"
  },
  "functions": {
    "server/index.js": {
      "maxDuration": 30
    }
  }
}